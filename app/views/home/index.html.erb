<div class="row">
  <div class="large-6 columns">
    <h3>Get started</h3>

    <div class="panel callout radius">
      <%= link_to 'Create', new_room_path, class: 'round button' %> a room
    </div>

    <h3>Recent rooms</h3>

    <div class="panel callout radius">
      <% unless @room_history.nil? %>
        <ul class="no-bullet">
        <% @room_history.each do |attendee| %>
          <li>
            <%= link_to attendee.room.display_name, attendee.room %>
              as <%= attendee.name %>
          </li>
        <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>