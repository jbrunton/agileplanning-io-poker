<div class="row">
  <div class="large-12 columns">
    <h3>Agile Poker</h3>
    <div class="panel callout radius text-center">
      <%= link_to 'Create', rooms_path, class: 'round button', method: 'POST' %>
      a room.
      <% unless @attendee.nil? %>
        <br />
        Or <%= link_to 'rejoin', @attendee.room, class: 'round button' %>
        room #<%= @attendee.room.id %> as <%= @attendee.name %>.
      <% end %>
    </div>
  </div>
</div>